{
  "openapi": "3.0.0",
  "info": {
    "title": "Supabase Edge Functions API",
    "version": "1.0.0",
    "description": "Edge Functions for your Supabase project"
  },
  "servers": [
    {
      "url": "/",
      "description": "Edge Functions endpoint"
    }
  ],
  "paths": {
    "/hello-world": {
      "post": {
        "operationId": "invokeHelloWorld",
        "tags": ["edge-functions"],
        "summary": "Invoke hello-world function",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
